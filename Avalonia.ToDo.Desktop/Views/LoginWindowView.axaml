<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia.ToDo.Desktop.ViewModels"
        x:Class="Avalonia.ToDo.Desktop.Views.LoginWindowView"
        x:DataType="vm:LoginViewModel"
        Title="Login"
        Width="400"
        Height="450"
        WindowStartupLocation="CenterScreen"
        CanResize="False">
    
    <StackPanel Margin="40" Spacing="15">
        <TextBlock Text="To-Do App Login" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <TextBlock Text="Username:"/>
        <TextBox Text="{Binding Username}" 
                 Watermark="Enter username"/>
        
        <TextBlock Text="Password:"/>
        <TextBox Text="{Binding Password}" 
                 Watermark="Enter password"
                 PasswordChar="â€¢"/>
        
        <TextBlock Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                   TextWrapping="Wrap"/>
        
        <Button Content="Login" 
                Command="{Binding LoginCommand}"
                HorizontalAlignment="Stretch"
                IsEnabled="{Binding !IsLoading}"
                Margin="0,10,0,0"/>
        
        <TextBlock Text="Default: demo / demo" 
                   FontSize="11" 
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </StackPanel>
</Window>