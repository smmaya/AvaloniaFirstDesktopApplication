<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Avalonia.ToDo.Desktop.ViewModels"
             x:Class="Avalonia.ToDo.Desktop.Views.ToDoListView"
             x:DataType="vm:ToDoListViewModel">

    <StackPanel Margin="20" Spacing="20">

        <!-- Title -->
        <TextBlock Text="Simple ToDo with Avalonia Desktop"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center" />

        <!-- Buttons -->
        <Grid ColumnDefinitions="Auto,Auto,*">
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Content="âž• New" Command="{Binding CreateCommand}" Width="150" Margin="0,0,10,0"
                        IsVisible="{Binding CanCreate}"/>
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Spacing="50">
                <TextBlock Text="{Binding TotalCount, StringFormat='Total: {0}'}" FontWeight="Bold"/>
                <TextBlock Text="{Binding RemainingCount, StringFormat='Remaining: {0}'}" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Table -->
        <Border Background="White" CornerRadius="8" BoxShadow="3 3 10 0 Gray">
            <StackPanel>
                <!-- Headers -->
                <Grid ColumnDefinitions="*,*,2*,Auto,Auto,Auto,Auto" Background="#E0E0E0" Height="32">
                    <TextBlock Text="Created" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="8,0" Grid.Column="0" />
                    <TextBlock Text="Title" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="8,0" Grid.Column="1" />
                    <TextBlock Text="Description" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="8,0" Grid.Column="2" />
                    <TextBlock Text="Done" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="8,0" Grid.Column="3" />
                    <TextBlock Text="View" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0" Grid.Column="4" />
                    <TextBlock Text="Edit" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0" Grid.Column="5" />
                    <TextBlock Text="Delete" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"
                               Margin="5,0" Grid.Column="6" />
                </Grid>
                <!-- Data rows -->
                <ItemsControl ItemsSource="{Binding ToDos}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="0,0,0,1" Background="White">
                                <Grid ColumnDefinitions="*,*,2*,Auto,Auto,Auto,Auto" MinHeight="32">
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MMM-dd}'}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,0" Grid.Column="0" />
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,0" Grid.Column="1" />
                                    <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="8,0" Grid.Column="2" />
                                    <CheckBox IsChecked="{Binding IsCompleted}"
                                              IsEnabled="False"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0" Grid.Column="3"
                                              IsVisible="{Binding IsNotPlaceholder}" />
                                    <Button Classes="view"
                                            Content="ðŸ‘"
                                            Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Grid.Column="4"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="8"
                                            Padding="6,3"
                                            Width="30"
                                            IsVisible="{Binding IsNotPlaceholder}" />
                                    <Button Classes="edit"
                                            Content="âœ"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Grid.Column="5"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="8"
                                            Padding="6,3"
                                            Width="30"
                                            IsVisible="{Binding IsNotPlaceholder}" />
                                    <Button Classes="delete"
                                            Content="ðŸ—‘"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Grid.Column="6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Margin="8"
                                            Padding="6,3"
                                            Width="30"
                                            IsVisible="{Binding IsNotPlaceholder}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>

        </Border>
    </StackPanel>

</UserControl>